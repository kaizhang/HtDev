params {
    atac_files = "data/ATAC/*/atac_fragments.tsv.gz" 
    rna_excitatory = "data/RNA/excitatory_IDonly_mergedAges.RDS"
    rna_inhibitory = "data/RNA/inhibitory_IDonly_mergedAges.RDS"
    metadata_excitatory = "data/metadata/excitatory_metadata.RDS"
    metadata_inhibitory = "data/metadata/inhibitory_metadata.RDS"
}

process.cache = 'lenient'

profiles {
  glean {
    executor {
      name='pbs'
      queueSize=50
    }
    process {
      executor = 'pbs'
      clusterOptions = "-q glean -l walltime=8:00:00 -l nodes=1:ppn=2"

      withLabel: gpu {
        clusterOptions = "-q gpu-hotel -l walltime=24:00:00 -l nodes=1:ppn=4:gpu3090"
      }
    }
  }

  home {
    executor {
      name='pbs'
      queueSize=50
    }
    process {
      executor = 'pbs'
      clusterOptions = "-q home-yeo -l walltime=8:00:00"

      withLabel: gpu {
        clusterOptions = "-q gpu-hotel -l walltime=24:00:00 -l nodes=1:ppn=4:gpu3090"
      }
    }
  }
}
